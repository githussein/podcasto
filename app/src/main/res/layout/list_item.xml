<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/audio_art"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp">
        <TextView
            android:id="@+id/audio_producer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/host_size"
            android:textColor="@color/audio_producer">
        </TextView>
        <TextView
            android:id="@+id/audio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/title_size"
            android:textColor="@color/audio_title">
        </TextView>
        <TextView
            android:id="@+id/audio_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/host_size"
            android:textColor="@color/audio_host">
        </TextView>
    </LinearLayout>

</LinearLayout>